/* Root Variables */
:root {
    --dark-bg: #ffffff;
    --dark-secondary: #f5f5f5;
    --dark-tertiary: #e8e8e8;
    --dark-text: #1a1a1a;
    --accent-color: #1a1a1a;
    --accent-secondary: #666666;
    --hover-color: #000000;
}

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    -webkit-tap-highlight-color: transparent;
}

html, body {
    max-width: 100%;
    overflow-x: hidden;
    scroll-behavior: smooth;
}

body {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
    background-color: var(--dark-bg);
    color: var(--dark-text);
    line-height: 1.6;
    touch-action: manipulation;
}

.heading {
    color: var(--accent-secondary);
    font-weight: 400;
    font-size: 1rem;
    letter-spacing: 0.3px;
}

.projects-container {
    padding: 3rem 5%;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2.5rem;
    max-width: 1400px;
    margin: 0 auto;
}

.project-card {
    background: var(--dark-secondary);
    border-radius: 12px;
    padding: 2.5rem;
    text-align: center;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
    border: 1px solid rgba(0, 0, 0, 0.08);
    display: flex;
    flex-direction: column;
    align-items: center;
}

.project-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 3px;
    background: var(--accent-color);
    transform: scaleX(0);
    transition: transform 0.5s ease;
    transform-origin: left;
}

.project-card:hover {
    transform: translateY(-8px);
    border-color: rgba(0, 0, 0, 0.15);
    box-shadow: 0 15px 35px rgba(0, 0, 0, 0.08);
}

.project-card:hover::before {
    transform: scaleX(1);
}

.project-icon {
    font-size: 3rem;
    color: var(--accent-color);
    margin-bottom: 1.5rem;
    transition: all 0.3s ease;
}

.project-card:hover .project-icon {
    transform: scale(1.15);
}

.project-card h3 {
    color: var(--accent-color);
    font-size: 1.4rem;
    margin-bottom: 1rem;
    font-weight: 600;
}

.project-card p {
    color: var(--accent-secondary);
    opacity: 0.85;
    margin-bottom: 1.5rem;
    line-height: 1.6;
    font-size: 0.95rem;
    flex-grow: 1;
}

.status {
    display: inline-block;
    background: rgba(0, 0, 0, 0.06);
    color: var(--accent-color);
    padding: 0.5rem 1rem;
    border-radius: 20px;
    font-size: 0.85rem;
    font-weight: 500;
    border: 1px solid rgba(0, 0, 0, 0.1);
}

@media (max-width: 768px) {
    .projects-container {
        padding: 2rem 5%;
        gap: 2rem;
    }

    .project-card {
        padding: 2rem;
    }

    .project-icon {
        font-size: 2.5rem;
    }

    .project-card h3 {
        font-size: 1.2rem;
    }

    .project-card p {
        font-size: 0.9rem;
    }
}

@media (max-width: 480px) {
    .projects-container {
        padding: 1.5rem 3%;
        gap: 1.5rem;
        grid-template-columns: 1fr;
    }

    .project-card {
        padding: 1.5rem;
    }

    .project-icon {
        font-size: 2rem;
    }

    .project-card h3 {
        font-size: 1.1rem;
    }
}

/* CTA Section */
.cta-section {
    background: var(--dark-secondary);
    padding: 4rem 5%;
    text-align: center;
    max-width: 1400px;
    margin: 4rem auto;
    border-radius: 12px;
    border: 2px solid var(--accent-color);
}

.cta-section h2 {
    font-size: 2rem;
    color: var(--accent-color);
    margin-bottom: 1rem;
    font-weight: 600;
}

.cta-section p {
    font-size: 1rem;
    color: var(--accent-secondary);
    margin-bottom: 2rem;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
}

.cta-button {
    display: inline-block;
    background: var(--accent-color);
    color: var(--dark-bg);
    padding: 1rem 2.5rem;
    border-radius: 8px;
    text-decoration: none;
    font-weight: 600;
    font-size: 1rem;
    transition: all 0.3s ease;
    border: 2px solid var(--accent-color);
}

.cta-button:hover {
    background: transparent;
    color: var(--accent-color);
    transform: scale(1.05);
}

@media (max-width: 768px) {
    .cta-section {
        padding: 3rem 5%;
        margin: 3rem auto;
    }

    .cta-section h2 {
        font-size: 1.6rem;
    }

    .cta-section p {
        font-size: 0.95rem;
    }

    .cta-button {
        padding: 0.8rem 2rem;
        font-size: 0.95rem;
    }
}

@media (max-width: 480px) {
    .cta-section {
        padding: 2rem 5%;
        margin: 2rem auto;
        border-radius: 8px;
    }

    .cta-section h2 {
        font-size: 1.4rem;
    }

    .cta-section p {
        font-size: 0.9rem;
    }

    .cta-button {
        padding: 0.7rem 1.8rem;
        font-size: 0.9rem;
        width: 100%;
    }
}
