        /* Root Variables */
        :root {
            --dark-bg: #ffffff;
            --dark-secondary: #f5f5f5;
            --dark-tertiary: #e8e8e8;
            --dark-text: #1a1a1a;
            --accent-color: #1a1a1a;
            --accent-secondary: #666666;
            --hover-color: #000000;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            -webkit-tap-highlight-color: transparent;
        }

        html, body {
            max-width: 100%;
            overflow-x: hidden;
            scroll-behavior: smooth;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
            background-color: var(--dark-bg);
            color: var(--dark-text);
            line-height: 1.6;
            touch-action: manipulation;
        }

        .heading {
            color: var(--accent-secondary);
            font-weight: 400;
            font-size: 1rem;
            letter-spacing: 0.3px;
        }

        .events-container {
            padding: 3rem 5%;
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        }

        .event-card {
            perspective: 1000px;
            margin-bottom: 100px;
            margin: 20px;
        }

        .event-card-inner {
            position: relative;
            width: 100%;
            height: 400px;
            transform-style: preserve-3d;
            transition: transform 0.6s;
        }

        .event-card-front, .event-card-back {
            position: absolute;
            width: 100%;
            height: 100%;
            backface-visibility: hidden;
            border-radius: 15px;
            overflow: hidden;
        }

        .event-card-front {
            background-color: var(--dark-secondary);
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            padding: 1rem;
            text-align: center;
        }

        .event-card-front img {
            width: 100%;
            height: 60%;
            object-fit: cover;
            border-radius: 20px;
        }

        .event-card-front h3 {
            margin-top: 1rem;
            color: var(--accent-color);
        }

        .event-card-front p {
            margin-top: 0.5rem;
            color: var(--dark-text);
        }

        .event-card-back {
            background-color: var(--dark-tertiary);
            transform: rotateY(180deg);
            padding: 1rem;
            text-align: center;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }

        .event-card-back h3 {
            color: var(--accent-color);
            margin-bottom: 1rem;
        }

        .event-card-back p {
            color: var(--dark-text);
            margin-bottom: 0.5rem;
        }